{
    "name": "flame05/flarum-ita",
    "type": "flarum-extension",
    "description": "Italian language pack for Flarum and its bundled extensions.",
    "homepage": "http://discuss.flarum.org/d/1354-italian-language-pack",
    "keywords": ["locale"],
    "version": "v1.0.1",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Bernasconi",
            "email": "daniel@cerchio.ch",
            "homepage": "http://daniel.world"
        }
    ],
    "support": {
        "issues": "https://github.com/flame05/flarum-ita/issues",
        "source": "https://github.com/flame05/flarum-ita"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.3"
    },
    "extra": {
        "flarum-extension": {
            "title": "Italiano",
            "icon": {
                "image": "icon.svg",
                "backgroundColor": "#00247d",
                "backgroundSize": "cover",
                "backgroundPosition": "center"
            }
        },
        "flarum-locale": {
            "code": "it",
            "title": "Italiano"
        }
    }
}
